@model crudelicious.Models.Dishes
<div class="row">
        <a href="/" style="margin-top: 25px;">Home</a>
    </div>
<div class="text-center">
    <h1 style="margin: 20px">Edit @Model.Name</h1>
    <form asp-action="editDish" asp-controller="Home" method="POST">
        <div class="row">
        <div class="col">
            <div class="row">
                <div class="form-group">
                    <label for="Chef">Chef's Name:</label>
                    <input type="text" class="form-control" id="Chef" name="Chef" value="@Model.Chef">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label for="Dish">Name of Dish:</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label for="Calories"># of Calories:</label>
                    <input type="text" class="form-control" id="Calories" name="Calories" value="@Model.Calories">
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="form-group">
                    <label for="tastiness">Tastiness:</label>
                    <select class="form-control" id="Tastiness" name="Tastiness" value="@Model.Tastiness">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" rows="5" cols="40" id="Description" name="Description" value="@Model.Description"></textarea>
                </div>
            </div>
            <input type="hidden" id="Id" name="Id" value="@Model.Id">
            <div class="row" style="justify-content: flex-end">
                <button type="submit" class="btn btn-primary">Edit Dish</button>
            </div>
        </div>
    </div>
    </form>
</div>